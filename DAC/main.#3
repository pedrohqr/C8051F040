#include "..\util.h"
#include "amostras2.c"
#include <stdio.h>

unsigned int i = 0;

void TM2_Overflow() interrupt 5
{
	if(i < 30000)
		i++;
	else
		i = 0;

	TF2 = 0;
}

void main()
{
	Init_Device();
	SFRPAGE = LEGACY_PAGE;

	glcd_init();

	while(1)
	{
		DAC0H = amostras[i];
		DAC0L = 0x00;

		printf_fast_f("\01 Amostras \02 %d", i);

		while(TF2 == 0);
	}
}